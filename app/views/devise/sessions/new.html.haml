.container-fluid
  .row
    .card.col-sm-4.offset-sm-4{:style => "width: 18rem;margin-top:50px;;"}
      /%img.card-img-top{:alt => "Card image cap", :src => "https://via.placeholder.com/350x150"}
      .card-body
        %h5.card-title{style: 'text-align: center;'} Log in
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', "aria-describedby": "emailHelp"
          .form-group
            = f.label :password
            = f.password_field :password, autocomplete: "off", class: 'form-control'
          .row
            .col-sm-6
              - if devise_mapping.rememberable?
                .custom-control.custom-checkbox
                  = f.check_box :remember_me, class: 'custom-control-input'
                  = f.label :remember_me, class: 'custom-control-label'
            .col-sm-6
              %small
                = link_to "Forgot your password?", new_password_path(resource_name)
          %br
            = f.submit "Log in", class: 'btn btn-primary btn-lg btn-block'
        Don't have an account? 
        = link_to "Sign up", new_registration_path(resource_name)
